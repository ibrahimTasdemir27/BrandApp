<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Alternative.FindAlternativeViewController">

    <TextView
        android:id="@+id/textView3"
        style="@style/customfontstyle1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Alternatif Bul" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori : "
            android:layout_gravity="center_horizontal"
            style="@style/customfontstyle2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/select_sector_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/customfontstyle2"
                android:text="Yemek - İçecek"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_sector_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="3dp"/>

        </LinearLayout>

<!--        <Button-->
<!--            android:id="@+id/select_sector_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:background="#00FFFFFF"-->
<!--            android:backgroundTint="#00FFFFFF"-->
<!--            android:contentDescription="null"-->
<!--            tools:ignore="TouchTargetSizeCheck" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="200dp">

            <TextView
                android:id="@+id/select_country_left_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="İsrail"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                style="@style/customfontstyle2"/>

<!--            <Button-->
<!--                android:id="@+id/select_left_country_button"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:background="#00FFFFFF"-->
<!--                android:backgroundTint="#00FFFFFF"-->
<!--                android:contentDescription="NULL"-->
<!--                tools:ignore="TouchTargetSizeCheck" />-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_left_country_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brands_left_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"/>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="200dp">

<!--            <Button-->
<!--                android:id="@+id/select_right_country_button"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="0dp"-->
<!--                android:background="#00FFFFFF"-->
<!--                android:backgroundTint="#00FFFFFF"-->
<!--                android:contentDescription="NULL"-->
<!--                tools:ignore="TouchTargetSizeCheck" />-->

            <TextView
                android:id="@+id/select_country_right_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/baseline_arrow_drop_down_24"
                android:text="Türkiye"
                android:layout_gravity="right"
                style="@style/customfontstyle2"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_right_country_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brands_right_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:layout_gravity="right"
                tools:ignore="RtlCompat" />



        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />



    </LinearLayout>

</LinearLayout>